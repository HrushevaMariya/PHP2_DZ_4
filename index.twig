<body>
Goods:<br>
<ul id="goods">
{#    <li>Product-1</li>#}
{#    <li>Product-2</li>#}
</ul>
<button id="load">Load more</button>
</body>
<script>
    var from = 0;
    function loadMore(){
$.ajax({
    url:'?from=0'+from,
    dataType:'html',
    success: function (html){
        $('#goods').append(html);
        from+=3;
    }
});
    }
    loadMore();
    $('#load').click(function (){
        loadMore();
    });
</script>
</html>